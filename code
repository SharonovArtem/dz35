using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using System.Xml.Linq;

namespace dzkurs
{
    internal class Program
    {
        static void Main(string[] args)
        {
            List<string> names = new List<string>();
            List<string> positions = new List<string>();
            string command;
            string addDossierCommand = "1";
            string showAllDossiersCommand = "2";
            string deleteDossierCommand = "3";
            string exitCommand = "4";
            bool isWorking = true;

            while (isWorking)
            {
                Console.WriteLine("Добавить досье - " + addDossierCommand);
                Console.WriteLine("Показать все досье - " + showAllDossiersCommand);
                Console.WriteLine("Удалить досье - " + deleteDossierCommand);
                Console.WriteLine("Выйти - " + exitCommand);
                Console.WriteLine("Введите команду");

                command = Console.ReadLine();

                if (command == addDossierCommand)
                {
                    AddDossier(ref names, ref positions);
                }
                else if (command == showAllDossiersCommand)
                {
                    ShowAllDossiers(names, positions);
                }
                else if (command == deleteDossierCommand)
                {
                    DeleteDossier(ref names, ref positions);
                }
                else if (command == exitCommand)
                {
                    Console.WriteLine("До свидания!");
                    isWorking = false;
                }
                else
                {
                    Console.WriteLine("Неизвестная команда");
                }
            }
        }

        static void AddDossier(ref List<string> names, ref List<string> positions)
        {
            string name;
            string post;

            Console.WriteLine("Введите ФИО");
            name = Console.ReadLine();
            names.Add(name);

            Console.WriteLine("Введите должность");
            post = Console.ReadLine();
            positions.Add(post);

            Console.WriteLine("Должность " + post + " Установлена на сотрудника " + name);
        }

        static void ShowAllDossiers(List<string> names, List<string> positions)
        {
            int count = 0;

            for (int i = 0; i < names.Count; i++)
            {
                count++;
                Console.WriteLine(count + ". " + names[i] + " - " + positions[i]);
            }
        }

        static void DeleteDossier(ref List<string> names, ref List<string> positions)
        {
            string name;
            string position;

            Console.WriteLine("Введите ФИО, которе хотите удалить");
            name = Console.ReadLine();
            Console.WriteLine("Какая должность зарегистрирована на это ФИО?");
            position = Console.ReadLine();

            Console.WriteLine("Должность " + name + " удалена");

            for (int i = 0; i < names.Count; i++)
            {
                if (names[i] == name && positions[i] == position)
                {
                    names.RemoveAt(i);
                    positions.RemoveAt(i);
                }
            }
        }
    }
}
